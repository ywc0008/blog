---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/astro/Header.astro";
import Footer from "../components/astro/Footer.astro";

const siteTitle = "About - ywc.life";
const siteDescription = "ywc.life 블로그와 운영자를 소개합니다.";
---

<BaseLayout title={siteTitle} description={siteDescription}>
  <div class="min-h-screen flex flex-col">
    <Header />

    <main class="flex-1">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <section class="mb-12">
          <h1 class="text-4xl sm:text-5xl font-bold mb-8 text-gray-900">About</h1>

          <div class="space-y-6 text-gray-700 leading-relaxed">
            <p class="text-lg">
              안녕하세요, <strong>ywc</strong>입니다.
            </p>
          </div>
        </section>
      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>
