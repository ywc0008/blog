---
const currentYear = new Date().getFullYear();

const links = [
  { href: "/rss.xml", label: "RSS" },
  { href: "https://github.com/ywc0008", label: "GitHub" },
  { href: "https://twitter.com", label: "Twitter" },
];
---

<footer class="mt-auto py-8 border-t border-gray-200 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center gap-4">
      <div class="flex gap-6">
        {
          links.map((link) => (
            <a
              href={link.href}
              class="text-gray-600 no-underline hover:text-blue-600 transition-colors"
              target={link.href.startsWith("http") ? "_blank" : undefined}
              rel={link.href.startsWith("http") ? "noopener noreferrer" : undefined}
            >
              {link.label}
            </a>
          ))
        }
      </div>
      <p class="text-sm text-gray-500 m-0">
        Â© {currentYear} Dev Blog. All rights reserved.
      </p>
    </div>
  </div>
</footer>
