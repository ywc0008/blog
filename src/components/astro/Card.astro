---
import type { BlogPost } from "../../types";

export interface Props {
  post: BlogPost;
}

const { post } = Astro.props;

const formattedDate = new Intl.DateTimeFormat("ko-KR", {
  year: "numeric",
  month: "long",
  day: "numeric",
}).format(new Date(post.pubDate));
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-transform duration-200 hover:scale-[1.02]">
  <a href={`/posts/${post.slug}`} class="block no-underline text-inherit">
    {
      post.heroImage && (
        <img
          src={post.heroImage}
          alt={post.title}
          class="w-full h-48 object-cover"
          loading="lazy"
        />
      )
    }
    <div class="p-6">
      <div class="flex items-center gap-3 text-sm text-gray-600 dark:text-gray-400 mb-3">
        <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded font-medium">{post.category}</span>
        <span class="text-gray-500 dark:text-gray-400">{formattedDate}</span>
      </div>
      <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-gray-100">{post.title}</h3>
      <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2">{post.description}</p>
      <div class="flex flex-wrap gap-2">
        {post.tags.map((tag) => (
          <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded text-sm">{tag}</span>
        ))}
      </div>
    </div>
  </a>
</article>
