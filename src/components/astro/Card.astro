---
import { Image } from "astro:assets";
import type { BlogPost } from "../../types";

export interface Props {
  post: BlogPost;
}

const { post } = Astro.props;

const formattedDate = new Intl.DateTimeFormat("ko-KR", {
  year: "numeric",
  month: "long",
  day: "numeric",
}).format(new Date(post.pubDate));
---

<article
  class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-200 hover:scale-[1.02]"
>
  {
    post.heroImage && (
      <a href={`/posts/${post.slug}`} class="block">
        <Image
          src={post.heroImage}
          alt={post.title}
          width={800}
          height={400}
          class="w-full h-48 object-cover"
          loading="lazy"
          format="webp"
        />
      </a>
    )
  }
  <div class="p-6">
    <div class="flex items-center gap-3 text-sm text-gray-600 mb-3">
      <a
        href={`/categories/${post.category.toLowerCase()}`}
        class="px-2 py-1 bg-blue-100 text-blue-800 rounded font-medium no-underline hover:bg-blue-200 transition-colors"
        >{post.category}</a
      >
      <span class="text-gray-500">{formattedDate}</span>
    </div>
    <a href={`/posts/${post.slug}`} class="block no-underline">
      <h3 class="text-xl font-bold mb-2 text-gray-900 hover:text-blue-600 transition-colors">
        {post.title}
      </h3>
    </a>
    <p class="text-gray-600 mb-4 line-clamp-2">{post.description}</p>
    <div class="flex flex-wrap gap-2">
      {
        post.tags.map((tag) => (
          <a
            href={`/tags/${tag.toLowerCase()}`}
            class="px-2 py-1 bg-gray-100 text-gray-700 rounded text-sm no-underline hover:bg-gray-200 transition-colors"
          >
            #{tag}
          </a>
        ))
      }
    </div>
  </div>
</article>
